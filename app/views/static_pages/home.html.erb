<% if @current_user %>
  <div class='row'>
    <aside class="col-md-4">
      <section class="post_form">
      <h3>Enter a new recipe</h3>
        <%= render 'recipes/form' %>
      </section>
    </aside>
    <div class='col-md-8 pull-right'>
      <h2 class="center" >Your recipes</h2>
      <section class="my-recipes center-block">

        <%= render @recipes[0..-2] %>
      </section>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <p> Welcome! Please <%= link_to "sign up", signup_path %> </p>
  </div>
<% end %>
